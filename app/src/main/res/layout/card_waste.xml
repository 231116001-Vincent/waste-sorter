<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_card_organik"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/waste_image"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:background="@drawable/bg_icon"
        android:contentDescription="@string/image_description_category"
        android:src="@drawable/ic_leaf"/>

    <TextView
        android:id="@+id/waste_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Kardus"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/waste_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textAlignment="center"
        android:text="Anorganik"
        android:singleLine="true"/>

</LinearLayout>